<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/BgColor"    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Time Between Two "
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/TextColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Times "
        android:layout_marginTop="5sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/TextColor"/>

    <Button
        android:id="@+id/btnStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showStartTimePicker"
        android:layout_marginTop="10sp"
        android:text="Select Start Time"
        android:backgroundTint="@color/paddColor"
        />

    <Button
        android:id="@+id/btnEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showEndTimePicker"
        android:layout_marginTop="10sp"
        android:text="Select End Time"
        android:backgroundTint="@color/paddColor"/>

    <Button
        android:id="@+id/btnCalculateDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateTimeDifference"
        android:layout_marginTop="10sp"
        android:text="Calculate Difference"
        android:backgroundTint="@color/paddColor"/>

    <TextView
        android:id="@+id/tvTimeDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/TextColor"/>

</LinearLayout>
